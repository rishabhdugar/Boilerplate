<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sarkisian.template"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".app.TlApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <service
            android:name=".io.service.TlIntentService"/>

        <service
            android:name=".io.service.TlService"/>

        <provider
            android:name=".db.provider.TlProvider"
            android:authorities="${applicationId}"/>

        <activity
            android:name=".ui.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainTheme"/>

        <activity
            android:name=".ui.activity.AuthActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>